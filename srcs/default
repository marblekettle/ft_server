server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /server;
	index index.php;

	server_name localhost;

	location / {
		autoindex on;
		root /wordpress;
		try_files $uri $uri/ =404;
	}

	location /phpmyadmin/ {
		root /phpmyadmin;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/var/run/php/php7.3-fpm.sock;
	}
}
